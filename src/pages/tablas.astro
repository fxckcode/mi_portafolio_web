---
import Base from "../layout/Base.astro";
---

<Base title="MI SITIO WEB | TABLAS">
  <div class="container">
    <table>
      <tr>
        <th class="dc-color">Paquete</th>
        <th class="dc-color">Programación</th>
        <th class="g-color">Plan Basico</th>
        <th class="b-color">Plan Silver</th>
        <th class="o-color">Plan Golden</th>
        <th class="p-color">Plan Titanium</th>
      </tr>
      <tr>
        <th rowspan="3" class="dc-color">Discovery</th>
        <td class="dc-color">Discovery Channel</td>
        <td colspan="4" class="content">✔</td>
      </tr>
      <tr>
        <td class="dc-color">Discovery World</td>
        <td colspan="2" class="content">❌</td>
        <td colspan="2" class="content">✔</td>
      </tr>
      <tr>
        <td class="dc-color">Animal Planet</td>
        <td colspan="2" class="content">❌</td>
        <td colspan="2" class="content">✔</td>
      </tr>
      <tr>
        <th rowspan="3" class="dc-color">HBO</th>
        <td class="dc-color">HBO Family</td>
        <td colspan="3" class="content">❌</td>
        <td class="content">✔</td>
      </tr>
      <tr>
        <td class="dc-color">HBO Classic</td>
        <td colspan="3" class="content">No</td>
        <td class="content">Si</td>
      </tr>
      <tr>
        <td class="dc-color">HBO Comedy</td>
        <td colspan="3" class="content">No</td>
        <td class="content">Si</td>
      </tr>
    </table>
    <a href="index.html">Volver</a>
  </div>
</Base>

<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: sans-serif;
  }

  body {
    width: 100%;
    height: 100vh;
  }

  .container {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  table {
    border-collapse: collapse;
  }

  th,
  td {
    border: 1px solid rgba(255, 255, 255, 0.7);
    padding: 10px 15px;
    text-align: center;
  }

  td.content {
    background-color: rgba(37, 37, 37, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(5px);
  }

  .dc-color {
    background-color: darkcyan;
    color: white;
  }

  .g-color {
    background-color: green;
  }

  .b-color {
    background-color: #3498db;
  }

  .o-color {
    background-color: #f39c12;
  }

  .p-color {
    background-color: #7d3c98;
  }
  a {
    padding: 10px;
    border: 1px solid white;
    border-radius: 5px;
    margin: 10px;
    cursor: pointer;
    box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
    text-decoration: none;
    color: white;
    background-color: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);

    &:hover {
      box-shadow: 20px 20px 20px rgba(0, 0, 0, 0.3);
      transition: 1s all;
      background-color: white;
      color: black;
    }
  }
</style>
